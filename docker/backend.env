# Backend Production Environment for Docker
# Copy from env.production.example and modify for Docker deployment

# Application Settings
APP_NAME=Script Smith
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security Settings - CRITICAL FOR PRODUCTION
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-256-bits
ENFORCE_HTTPS=true

# Server Settings
HOST=0.0.0.0
PORT=8082

# Database Settings - Docker service names
DATABASE_URL=postgresql://postgres:password@postgres:5432/online_ide

# Redis Settings - Docker service name
REDIS_URL=redis://redis:6379/0

# CORS Settings - Update with your production domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Trusted Hosts - Update with your production domains
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com,backend

# JWT Authentication Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=1

# Rate Limiting Settings
GLOBAL_RATE_LIMIT=50
AUTH_RATE_LIMIT=5
LOGIN_RATE_LIMIT=3
REGISTER_RATE_LIMIT=2

# Code Execution Settings
MAX_EXECUTION_TIME=10
MAX_MEMORY_MB=128
MAX_CODE_SIZE_KB=50

# Supported Languages
SUPPORTED_LANGUAGES=python,javascript,typescript,java,cpp,go,rust

# Email Settings - Configure for production
SMTP_SERVER=smtp.yourmailservice.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Admin Settings - CRITICAL FOR PRODUCTION
# SECURITY: These emails will have admin access regardless of role in database
# PRODUCTION: Use only verified corporate email addresses, limit to 2-3 max
ADMIN_EMAILS=admin@yourdomain.com,security@yourdomain.com

# Security Settings
MIN_PASSWORD_LENGTH=12
MAX_PASSWORD_LENGTH=128
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
