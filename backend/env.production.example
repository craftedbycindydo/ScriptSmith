# Production Environment Configuration for 2025 Security Standards
# Copy this file to .env and fill in your production values
# ALL VALUES ARE REQUIRED - NO FALLBACKS PROVIDED

# Application Settings
APP_NAME=Script Smith
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security Settings - CRITICAL FOR PRODUCTION
SECRET_KEY=your-super-secure-secret-key-change-this-in-production-256-bits
ENFORCE_HTTPS=true

# Server Settings
HOST=0.0.0.0
PORT=8082

# Database Settings - Railway Reference Variables (RECOMMENDED)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis Settings - Railway Reference Variables (RECOMMENDED)
REDIS_URL=${{Redis.REDIS_URL}}

# CORS Settings - Railway Reference Variables (RECOMMENDED)
ALLOWED_ORIGINS=${{Frontend.RAILWAY_PUBLIC_DOMAIN}}

# Trusted Hosts - Railway Reference Variables (RECOMMENDED)
TRUSTED_HOSTS=${{RAILWAY_PUBLIC_DOMAIN}},${{Frontend.RAILWAY_PUBLIC_DOMAIN}}

# JWT Authentication Settings - ALL REQUIRED
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=1

# Rate Limiting Settings - ALL REQUIRED
GLOBAL_RATE_LIMIT=50
AUTH_RATE_LIMIT=5
LOGIN_RATE_LIMIT=3
REGISTER_RATE_LIMIT=2

# Code Execution Settings - ALL REQUIRED
MAX_EXECUTION_TIME=10
MAX_MEMORY_MB=128
MAX_CODE_SIZE_KB=50

# Supported Languages - REQUIRED (comma-separated)
SUPPORTED_LANGUAGES=python,javascript,typescript,java,cpp,go,rust

# Microservice Executor URLs - Railway Reference Variables (RECOMMENDED)
# These use Railway's reference variables for automatic URL discovery
PYTHON_EXECUTOR_URL=https://${{python-executor.RAILWAY_PUBLIC_DOMAIN}}
JAVASCRIPT_EXECUTOR_URL=https://${{nodejs-executor.RAILWAY_PUBLIC_DOMAIN}}
JAVA_EXECUTOR_URL=https://${{java-executor.RAILWAY_PUBLIC_DOMAIN}}
CPP_EXECUTOR_URL=https://${{cpp-executor.RAILWAY_PUBLIC_DOMAIN}}
GO_EXECUTOR_URL=https://${{go-executor.RAILWAY_PUBLIC_DOMAIN}}
RUST_EXECUTOR_URL=https://${{rust-executor.RAILWAY_PUBLIC_DOMAIN}}

# Email Settings - ALL REQUIRED for production
SMTP_SERVER=smtp.yourmailservice.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Admin Settings - REQUIRED (comma-separated for multiple admins)  
# SECURITY: These emails will have admin access regardless of role in database
# CRITICAL: In production, use only verified corporate email addresses
# RECOMMENDATION: Limit to 2-3 trusted administrators maximum
# Example: ADMIN_EMAILS=admin@yourdomain.com,security@yourdomain.com
ADMIN_EMAILS=admin@yourdomain.com,security@yourdomain.com

# Security Settings - ALL REQUIRED
MIN_PASSWORD_LENGTH=12
MAX_PASSWORD_LENGTH=128
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
