# Development Environment Configuration
# Copy this file to .env for local development
# ALL VALUES ARE REQUIRED - NO FALLBACKS PROVIDED

# Application Settings
APP_NAME=Script Smith
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production-this-is-only-for-development
ENFORCE_HTTPS=false

# Server Settings
HOST=0.0.0.0
PORT=8082

# Database Settings - SQLite for development
DATABASE_URL=sqlite:///./online_ide.db

# Redis Settings - REQUIRED
REDIS_URL=redis://localhost:6379/0

# CORS Settings - Development origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Trusted Hosts - Development hosts
TRUSTED_HOSTS=localhost,127.0.0.1,0.0.0.0

# JWT Authentication Settings - ALL REQUIRED
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=24

# Rate Limiting Settings - ALL REQUIRED
GLOBAL_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
LOGIN_RATE_LIMIT=5
REGISTER_RATE_LIMIT=3

# Code Execution Settings - ALL REQUIRED
MAX_EXECUTION_TIME=30
MAX_MEMORY_MB=256
MAX_CODE_SIZE_KB=100

# Supported Languages - REQUIRED (comma-separated)
SUPPORTED_LANGUAGES=python,javascript,typescript,java,cpp,go,rust

# Microservice Executor URLs - REQUIRED
# These are set by start-dev.sh for local development
PYTHON_EXECUTOR_URL=http://localhost:8001
JAVASCRIPT_EXECUTOR_URL=http://localhost:8002
JAVA_EXECUTOR_URL=http://localhost:8003
CPP_EXECUTOR_URL=http://localhost:8004
GO_EXECUTOR_URL=http://localhost:8005
RUST_EXECUTOR_URL=http://localhost:8006

# Email Settings (Development - can be empty for file backend)
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@onlineide.com

# Admin Settings - REQUIRED (comma-separated for multiple admins)
# SECURITY: These emails will have admin access regardless of role in database
# Use secure email addresses and limit to trusted administrators only
# Example: ADMIN_EMAILS=admin@company.com,security@company.com,cto@company.com
ADMIN_EMAILS=k@p.com

# Security Settings - ALL REQUIRED
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
REQUIRE_EMAIL_VERIFICATION=false
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
