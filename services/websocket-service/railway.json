{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "resources": {
      "memory": "1GB"
    },
    "numReplicas": 1,
    "sleepApplication": false,
    "healthcheckEnabled": true
  }
}
