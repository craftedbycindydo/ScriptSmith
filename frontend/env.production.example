# Frontend Production Environment Configuration
# Copy this file to .env.production for production builds
# ALL VALUES ARE REQUIRED - NO FALLBACKS PROVIDED

# API Configuration - Railway Reference Variables (RECOMMENDED)
VITE_API_BASE_URL=https://${{backend.RAILWAY_PUBLIC_DOMAIN}}
VITE_API_TIMEOUT=30000

# WebSocket Configuration for Real-time Collaboration
VITE_WS_URL=wss://${{backend.RAILWAY_PUBLIC_DOMAIN}}

# Application Configuration
VITE_APP_NAME=Script Smith
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGS=false

# Code Editor Configuration
VITE_DEFAULT_LANGUAGE=python
VITE_AUTO_SAVE_INTERVAL=10000
VITE_CODE_EXECUTION_TIMEOUT=30000

# UI Configuration
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true

# Analytics (Optional - set to empty if not used)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
